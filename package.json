{
    "name": "api",
    "displayName": "vscode-api-language",
    "description": "vscode-api-language with Language Server support",
    "version": "0.0.23",
    "publisher": "Daniel",
    "repository": {
        "type": "git",
        "url": "https://github.com/nevernet/vscode-api.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:api"
    ],
    "main": "./dist/client/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "api",
                "aliases": [
                    "API",
                    "api"
                ],
                "extensions": [
                    ".api",
                    ".keydef"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "api",
                "scopeName": "text.api",
                "path": "./syntaxes/api.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "api.reindexAll",
                "title": "重新索引所有API文件",
                "category": "API"
            },
            {
                "command": "api.cancelIndexing",
                "title": "取消索引",
                "category": "API"
            },
            {
                "command": "api.clearIndex",
                "title": "清空索引",
                "category": "API"
            },
            {
                "command": "api.forceResetAndReindex",
                "title": "强制重置并重新索引",
                "category": "API"
            },
            {
                "command": "api.getIndexStatus",
                "title": "获取索引状态（调试）",
                "category": "API"
            },
            {
                "command": "api.emergencyStop",
                "title": "紧急停止所有索引操作",
                "category": "API"
            },
            {
                "command": "api.absoluteRestart",
                "title": "绝对重启索引系统",
                "category": "API"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "API Language Server Configuration",
            "properties": {
                "apiLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "apiLanguageServer.format.enable": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/disable formatting."
                },
                "apiLanguageServer.format.indentSize": {
                    "scope": "resource",
                    "type": "number",
                    "default": 2,
                    "description": "Number of spaces used for indentation."
                },
                "apiLanguageServer.format.alignFields": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Align field names in struct definitions."
                },
                "apiLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "compile": "npm run clean && tsc -b",
        "watch": "tsc -b -w",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "test": "node ./dist/test/runTest.js",
        "clean": "rm -rf dist",
        "bump-version": "node scripts/bump-version.js",
        "build": "node scripts/build.js",
        "build:bump": "node scripts/build.js --bump",
        "package": "npm run compile && npx vsce package --out dist/",
        "package:bump": "npm run bump-version && npm run package",
        "publish": "npm run package:bump && npx vsce publish",
        "dev": "npm run watch"
    },
    "devDependencies": {
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "@vscode/test-electron": "^2.2.0",
        "@vscode/vsce": "^2.19.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0",
        "vscode-languageserver": "^8.1.0",
        "vscode-languageserver-textdocument": "^1.0.8"
    }
}
